<!DOCTYPE html>

<!-- Projemin layout'u -->

<html class="loading" lang="tr" data-textdirection="ltr">
<head>
    <partial name="_HeadPartial" />
    @RenderSection("PageStyles", false) <!-- style dosyalrının render'lanması için section' -->
</head>
<body class="vertical-layout vertical-menu-collapsible page-header-dark vertical-modern-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-modern-menu" data-col="2-columns">

    <partial name="_HeaderPartial" />
    <partial name="_SidebarPartial" />

    <div id="main">
        <div class="row">
            <div class="col s12">
                <div class="container">
                    <div class="section">
                        @RenderBody()
                        @RenderSection("AFTimer", false) <!-- timer'ın render'lanması için section' -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <partial name="_FooterPartial" />

    <script>
        @RenderSection("Noty", false)
            toastr.options = {
            "closeButton": false,
                "debug": false,
                    "newestOnTop": false,
                        "progressBar": true,
                            "positionClass": "toast-bottom-right",
                                "preventDuplicates": false,
                                    "onclick": null,
                                        "showDuration": "300",
                                            "hideDuration": "1000",
                                                "timeOut": "5000",
                                                    "extendedTimeOut": "1000",
                                                        "showEasing": "swing",
                                                            "hideEasing": "linear",
                                                                "showMethod": "fadeIn",
                                                                    "hideMethod": "fadeOut"
        }
    </script>

    <partial name="_ScriptsPartial" />
    @RenderSection("ChartScripts", false) <!-- chart scriptlerinin render'lanması için section' -->
    @RenderSection("PageScripts", false) <!-- script dosyalarının render'lanması için section' -->


</body>
</html>
