<!-- AntiForegryToken kontrolü ile timer'ın aktifleştirilmesi  -->

<script type="text/javascript">
    var afToken = $('input[name=__RequestVerificationToken]').val();
    if (afToken != undefined)
        $("div.afTimer").removeClass("display-none");
    else
        $("div.afTimer").addClass("display-none");

    $(function () {

        var second = 1200;
        var timerPosition = $("div.afTimer span");
        var leftSeconds = 1200;
        var a = 0;
        $.startTimer = function () {
            if (second > 60) {
                second--;
                leftSeconds = second / 60;
                a = leftSeconds.toString().split(".");
                if (a[0] <= 3) {
                    window.location.reload();
                }
                timerPosition.text(a[0]);
            } else {
                $("div.afTimer").text("Time Out");
                window.location.reload();
            }
        }
        leftSeconds = second / 60;
        timerPosition.text(leftSeconds);
        setInterval("$.startTimer()", 1200);

    });
</script>